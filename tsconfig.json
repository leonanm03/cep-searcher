{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "dist",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "rootDirs": ["src", "tests"],
        "baseUrl": "src",
        "skipLibCheck": true,
        "paths": {
            "@/*": ["*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "include": ["src", "tests", "prisma"]
}
